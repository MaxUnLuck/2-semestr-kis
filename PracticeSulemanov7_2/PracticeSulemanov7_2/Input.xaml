<Window x:Class="PracticeSulemanov7_2.Input"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticeSulemanov7_2"
        mc:Ignorable="d"
        Title="Input" Height="149" Width="250">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF9A9A9A"/>
            <GradientStop Color="#FFDFDFDF" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid x:Name="InputWindow" Margin="0,0,0,-6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="White"/>
                <GradientStop Color="#FFB3B3B3"/>
                <GradientStop Color="#00F0F0F0" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBox x:Name="TextBoxR" Margin="0,10,10,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Height="40" FontSize="25" HorizontalAlignment="Right" Width="115" DataContextChanged="TBInput"/>
        <RadioButton x:Name="SqR" Content="Square" HorizontalAlignment="Center" Margin="0,55,0,0" VerticalAlignment="Top" Height="25" Width="230" DataContextChanged="SqCh" IsChecked="False"/>
        <RadioButton x:Name="LeR" Content="Length" HorizontalAlignment="Center" Margin="0,80,0,0" VerticalAlignment="Top" Height="25" Width="230" DataContextChanged="LeCh"/>
        <RadioButton x:Name="SAR" Content="Sector area" HorizontalAlignment="Center" Margin="0,105,0,0" VerticalAlignment="Top" Height="25" Width="230" DataContextChanged="SACh"/>
        <Label Content="Radius:" HorizontalAlignment="Left" Margin="10,12,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.258,-0.414" Height="38" Width="115" FontSize="22"/>

    </Grid>
</Window>
